<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<BorderPane stylesheets="@../css/players-theme.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.diego.esports.controlador.JugadoresController">
    <!-- 🔹 Header de la pestaña -->
    <top>
        <HBox spacing="20" styleClass="players-header">
            <padding>
                <Insets bottom="15" left="20" right="20" top="15" />
            </padding>
         <Button fx:id="btnHome" onAction="#irCasa" prefHeight="40.0" prefWidth="48.0" styleClass="sidebar-button" text="🏠" />
            <Text styleClass="players-title" text="Administrar Jugadores" />
            <Region HBox.hgrow="ALWAYS" />
            <TextField fx:id="searchField" promptText="Buscar jugador..." styleClass="search-bar" />
            <Button fx:id="agregarJugadorbtn" onAction="#agregarJugador" styleClass="button-primary" text="+ Agregar Jugador" />
         <Button fx:id="btnEliminarJugador" onAction="#eliminarJugador" styleClass="button-primary" text="Eliminar Jugador" />
        </HBox>
    </top>

    <!-- 🔹 Contenido principal -->
    <center>
        <VBox spacing="15" styleClass="players-content">
            <TableView fx:id="tblJugadores" prefHeight="500">
                <columns>
                    <TableColumn fx:id="colId" prefWidth="54.0" text="ID" />
                    <TableColumn fx:id="colNombre" prefWidth="150.0" text="Nombre" />
                    <TableColumn fx:id="colNickname" prefWidth="150.0" text="Nickname" />
                    <TableColumn fx:id="colEmail" prefWidth="150" text="Email" />
               <TableColumn fx:id="colContrasena" prefWidth="150" text="Contraseña" />
               <TableColumn fx:id="colRol" prefWidth="100.0" text="Rol" />
               <TableColumn fx:id="colEstado" prefWidth="150" text="Estado" />
                </columns>
            </TableView>
        </VBox>
    </center>
   <right>
      <VBox prefHeight="540.0" prefWidth="219.0" BorderPane.alignment="CENTER">
         <children>
            <Region prefHeight="33.0" prefWidth="219.0" />
            <TextField fx:id="idField" prefHeight="33.0" prefWidth="73.0" promptText="ID" styleClass="search-bar" />
            <Region prefHeight="36.0" prefWidth="178.0" />
            <TextField fx:id="nombreField" prefHeight="33.0" prefWidth="443.0" promptText="Nombre" styleClass="search-bar" />
            <Region prefHeight="36.0" prefWidth="178.0" />
            <TextField fx:id="nicknameField" prefHeight="33.0" prefWidth="443.0" promptText="Nickname" styleClass="search-bar" />
            <Region prefHeight="36.0" prefWidth="178.0" />
            <TextField fx:id="emailField" prefHeight="33.0" prefWidth="235.0" promptText="Email" styleClass="search-bar" />
            <Region prefHeight="36.0" prefWidth="178.0" />
            <TextField fx:id="contraseñaField" prefHeight="33.0" prefWidth="0.0" promptText="Contraseña" styleClass="search-bar" />
            <Region prefHeight="36.0" prefWidth="178.0" />
            <ComboBox fx:id="rolCBox" prefHeight="25.0" prefWidth="202.0" promptText="Estado" />
            <Region prefHeight="36.0" prefWidth="178.0" />
            <ComboBox fx:id="estadoCBoc" prefHeight="25.0" prefWidth="202.0" promptText="Estado" />
         </children>
      </VBox>
   </right>
</BorderPane>
