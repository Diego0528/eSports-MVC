<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<BorderPane stylesheets="@../css/players-theme.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.diego.esports.controlador.JugadoresController">
    <!-- ðŸ”¹ Header de la pestaÃ±a -->
    <top>
        <HBox spacing="20" styleClass="players-header">
            <padding>
                <Insets bottom="15" left="20" right="20" top="15" />
            </padding>
            <Text styleClass="players-title" text="Administrar Jugadores" />
            <Region HBox.hgrow="ALWAYS" />
            <TextField fx:id="searchField" promptText="Buscar jugador..." styleClass="search-bar" />
            <Button fx:id="addPlayerButton" styleClass="button-primary" text="+ Agregar Jugador" />
        </HBox>
    </top>

    <!-- ðŸ”¹ Contenido principal -->
    <center>
        <VBox spacing="15" styleClass="players-content">
            <TableView fx:id="tblJugadores" prefHeight="500">
                <columns>
                    <TableColumn fx:id="colId" prefWidth="70" text="ID" />
                    <TableColumn fx:id="colNombre" prefWidth="180" text="Nombre" />
                    <TableColumn fx:id="colNickname" prefWidth="150" text="Nickname" />
                    <TableColumn fx:id="colEquipo" prefWidth="150" text="Equipo" />
                    <TableColumn fx:id="colAcciones" prefWidth="150" text="Acciones" />
                </columns>
            </TableView>
        </VBox>
    </center>
</BorderPane>
