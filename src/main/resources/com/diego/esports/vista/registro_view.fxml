         <TextField fx:id="nicknameField" promptText="Ingresa tu nickname" styleClass="form-input" />
         <Label styleClass="form-label" text="Email" />
         <TextField fx:id="emailField" promptText="Ingresa tu email" styleClass="form-input" />

            <Label styleClass="form-label" text="ContraseÃ±a" />
