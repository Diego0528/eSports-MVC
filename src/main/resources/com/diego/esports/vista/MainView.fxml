<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>


<BorderPane fx:id="root" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" stylesheets="@../css/dark-theme.css">
    <top>
        <HBox spacing="20" styleClass="topbar">
            <padding>
                <Insets top="10" right="20" bottom="10" left="20"/>
            </padding>

            <!-- LOGO / TÍTULO -->
            <Label text="eSports Manager" styleClass="logo-text"/>

            <!-- BUSCADOR -->
            <TextField fx:id="searchField" promptText="Buscar jugador, equipo o torneo..." HBox.hgrow="ALWAYS"
                       styleClass="search-bar"/>

            <!-- PERFIL / USUARIO -->
            <Button text="Perfil" styleClass="button-primary"/>
        </HBox>
    </top>

    <!-- 🔹 SIDEBAR IZQUIERDO -->
    <left>
        <VBox spacing="10" styleClass="sidebar">
            <padding>
                <Insets top="20" right="10" bottom="20" left="10"/>
            </padding>

            <Button text="🏠  Inicio" styleClass="sidebar-button"/>
            <Button text="🎮  Torneos" styleClass="sidebar-button"/>
            <Button text="👥  Equipos" styleClass="sidebar-button"/>
            <Button text="🧑‍💻  Jugadores" styleClass="sidebar-button"/>
            <Button text="📊  Estadísticas" styleClass="sidebar-button"/>
            <Button text="⚙️  Configuración" styleClass="sidebar-button"/>
        </VBox>
    </left>

    <!-- 🔹 ÁREA CENTRAL (Panel dinámico) -->
    <center>
        <StackPane fx:id="contentArea" styleClass="content-area">
            <Label text="Bienvenido a la Plataforma de Torneos eSports"
                   styleClass="welcome-text"/>
        </StackPane>
    </center>
</BorderPane>
